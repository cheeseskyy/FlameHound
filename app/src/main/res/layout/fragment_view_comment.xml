<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/commentToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/sniped_top_toolbar" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/commentList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/newComment"
        android:layout_marginBottom="60dp">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/newComment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/commentToolbar"
        android:background="@drawable/white_grey_border_top"
        android:backgroundTint="@color/cast_expanded_controller_ad_label_background_color">


        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="50dp"
            android:background="@null"
            android:hint="Add a comment..."
            android:padding="2dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivPostComment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_checkmark" />

    </RelativeLayout>


</RelativeLayout>